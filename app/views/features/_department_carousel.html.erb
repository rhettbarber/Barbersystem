

        <div class="home-page-carousel">
          <% if @category_first_items %>
                        <style type="text/css">


                          .carousel_feature_container {
                              position: relative;
                              height: 270px;
                          }

                          .carousel_link_container {
                                  max-width:240px;
                                  min-height: 40px;
                                  text-align: center;
                          }



                            .featured-designs-carousel-image-container img {
                                display: block;
                                margin-left: auto;
                                margin-right:auto;
                                max-height: 230px;
                                max-width: 230px;
                            }

                            #featured-designs-carousel {
                                background-image: url(http://cdn.dixieoutfitters.com/images/backgrounds_repeating/light-plaid.jpg);
                                /*background-size: 100%;*/
                            }


                       .featured-designs-carousel-image-container {
                           width: 230px; height: 230px; margin-left:auto;margin-right:auto; vertical-align: middle; text-align: center;display: table-cell;
                       }

                        </style>








                        <div id="<%= feature_name %>" style="float: left;width: 100%;">

                          <% @category_first_items.each do |item| -%>
                              <% the_image_name = "/images/item_thumbnails/" +  item.PictureName if item %>


                              <% if  the_image_name %>
                                  <div class="carousel_feature_container">
                                    <div class="featured-designs-carousel-image-container"> <a  class="carousel_url_link"  href="/store/category_items/<%= item.department_id.to_s %>/<%= item.category_id.to_s %>"><img  src="http://cdn.dixieoutfitters.com/<%= the_image_name %> " />   </a> </div>
                                    <div  class="carousel_link_container">  <a  class="carousel_url_link"  href="/store/category_items/<%= item.department_id.to_s %>/<%= item.category_id.to_s %>"> <%= item.category.Name %>  </a> </div>

                                  </div>
                              <% end %>
                          
                          <% end %>
                        </div>

                        <script type="text/javascript">

                            $(document).ready(function(){

                                $('#<%= feature_name %>').slick({
                        //            lazyLoad: 'ondemand',
                                    autoplay: true,
                                    dots: true,
                                    autoplaySpeed: 5000,
                                    speed: 300,
                                    slidesToShow: 3,
                                    slidesToScroll: 1,
                                    slide: 'div',
                                    cssEase: 'linear' ,
                                    responsive: [
                                        {
                                            breakpoint: 1024,
                                            settings: {
                                                slidesToShow: 3,
                                                slidesToScroll: 1,
                                                infinite: true,
                                                dots: true
                                            }
                                        },
                                        {
                                            breakpoint: 750,
                                            settings: {
                                                infinite: true,
                                                slidesToShow: 2,
                                                slidesToScroll: 1
                                            }
                                        },
                                        {
                                            breakpoint: 600,
                                            settings: {
                                                infinite: true,
                                                slidesToShow: 1,
                                                slidesToScroll: 1
                                            }
                                        }
                                    ]
                                });

                            })
                        </script>
        <% end %>
        </div>






