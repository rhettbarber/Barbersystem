
<div id="ajax_administer_size_and_position" style="display:none;">

<%= render(:partial => "designer_specsheet/specsheet_resize")     -%>
<% if @advanced_combination %>
         <table>
           <tr>
             <td style="width:450px;">
                        <div id="front_control_panel">
                                                          <%= form_for( @advanced_combination, :method => :put,  :remote => true    ) do |f| %>
                                                                          <%= hidden_field_tag "side", "front" %>
                                                                          <%= f.text_field( :front_left ,:size => 4 ) %><br />
                                                                           <%= f.text_field( :front_top ,:size => 4 ) %><br />
                                                                           <%= f.text_field( :front_width ,:size => 4 ) %><br />
                                                                           <div style="width:125px;float:left;"> <%=  submit_tag( 'Save Changes',:disabled => true, :id => "save_changes_front")   %></div>
                                                          <% end %>
                                                                           <div style="width:125px;float:left;"> <%= button_to "Cancel", :onclick =>  "openBackDesignTab()"  %></div>
                                                                             <div id="advanced_combinations_saved_front"></div>
                            </div>
             </td>
             <td  style="width:450px;">
                              <div id="back_control_panel">
                                                          <%= form_for( @advanced_combination, :method => :put,  :remote => true    ) do |f| %>
                                                                          <%= hidden_field_tag "side", "back" %>
                                                                          <%= f.text_field( :back_left ,:size => 4 ) %><br />
                                                                          <%= f.text_field( :back_top ,:size => 4 ) %><br />
                                                                          <%= f.text_field( :back_width ,:size => 4 ) %><br />
                                                                          <div style="width:125px;float:left;"><%=  submit_tag( 'Save Changes',:disabled => true, :id => "save_changes_back")  %></div>
                                                          <% end %>
                                                                          <div style="width:125px;float:left;"><%= button_to "Cancel"  %></div>
                                                                            <div id="advanced_combinations_saved_back"></div>
                                </div>
             </td>
           </tr>
      </table>
            <% else %>
                                    "No Combination Exists for these item/design prefixes"
            <% end  %>

</div>


