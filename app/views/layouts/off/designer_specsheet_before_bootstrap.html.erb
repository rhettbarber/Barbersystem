          </div>

          <% if admin?  or ["development","development_production_connection"].include?(Rails.env) %>
                <% begin  %>
                       <br /><%= 'Verily_Adzzed' %>
                      <%= render :partial => 'development/instance_variables' , :locals => { :instance_variables => instance_variables } %>
