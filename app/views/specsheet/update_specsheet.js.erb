               console.log("updating @back_advanced_combination.id: <%= @back_advanced_combination.id  %>");
             $('#back_advanced_combination_id').val( "<%= @back_advanced_combination.id  %>" );


<% end %>

<%  if @front_advanced_combination  %>
            console.log("updating @front_advanced_combination.id: <%= @front_advanced_combination.id  %>");
            $('#front_advanced_combination_id').val( "<%= @front_advanced_combination.id  %>" );
<% end %>



<% if @item %>
                $("#item_itemlookupcode").html("<%= @item.ItemLookupCode %>");
                $("#item_extendeddescription").html("<%=    ActionView::Base.full_sanitizer.sanitize( @item.ExtendedDescription )[0..50]    %>...");
                $("#item_description").html("<%= @item.description_before_color_and_size %>");
<%else %>
                console.log("not at_item")
<% end %>

<%   if @design    && @design != 'x' %>
            $("#design_itemlookupcode").html("<%= @design.ItemLookupCode %>");
            $("#design_description").html("<%= @design.Description %>");
<% end %>

<%  if  @your_unit_price   %>
            $("#your_unit_price").html("<%= number_to_currency( @your_unit_price ) %>");
<% end  unless  @your_unit_price == 0.01 %>

watchForDimesionChange();


$('#div-back_slider').on( "change", function(){
    var back_slider_value =   $("#back_slider").val() ;
    scaleBack( back_slider_value );
})

$('#div-front_slider').on( "change", function(){
    var front_slider_value =   $("#front_slider").val() ;
    scaleFront( front_slider_value );
})





