<span style="text-align: center;">

<div style="font-size:17px;font-weight:bolder;">  Listing Items  </div>


  <%= render "search" %>


  <div id="search_results">
    <%= render "items/list" %>
  </div>



</span






<div id="items_list">
<% if @items %>
<style type="text/css">
    .item_thumbnail {
        width:120px;
    }
</style>

  <script type="text/javascript">


    function resizeThumbnail(  the_element_id   ) {
              // alert('the_element_id: ' + the_element_id );
               target = $(the_element_id);
               if ( target.className ==  'item_thumbnail_large' )
                    {
                        target.className = 'item_thumbnail';
                    }
                else
                    { target.className = 'item_thumbnail_large';  }


    }



    function resizeThumbnailReal(  the_element_id   ) {
                console.log('begin resizeThumbnail');
                target =  $(   the_element_id     )
                if ( target.className ==  'item_thumbnail_large' )
                    {
                        target.className = 'item_thumbnail';
                    }
                else
                    { target.className = 'item_thumbnail_large';  }
                console.log('end resizeThumbnail');
    }

  </script>

<table>
  <tr>
     <th>Words Hit</th>
    <th>Image</th>
    <th>ItemLookupCode</th>
    <th>Description</th>
    <th>SubDescription1</th>
    <th>SubDescription2</th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.SubDescription3 %></td>
    <td>



<% if item.item_class %>
            <%= image_tag('/images/item_thumbnails/' + item.number_only + '.png' , :id => "item_thumbnail_" + item.id.to_s , :class => "item_thumbnail" , :onclick => "resizeThumbnail(  'item_thumbnail_' +  #{item.id.to_s}    );")   %>
<% else %>
             <%= image_tag('/images/item_thumbnails/' + item.ItemLookupCode + '.png' , :id => "item_thumbnail_" + item.id.to_s , :class => "item_thumbnail" , :onclick => "resizeThumbnail(  'item_thumbnail_' +  #{item.id.to_s}    );")   %>
<% end  %>


    <%#= link_to 'Edit', edit_item_path(item)  %>
    
    </td>




    <td><%= item.ItemLookupCode %></td>
    <td><%= item.Description %></td>
    <td><%= item.SubDescription1 %></td>
    <td><%= item.SubDescription2 %></td>
  </tr>
<% end %>
</table>
<br />
<% else  %>

No Results Found!

<% end  %>
</div>