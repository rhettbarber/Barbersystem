              <li><a href='#items_panel'>Complete design by opening items</a></li>
            </ul>
          </div>
        </div>




        <% if @singular_item_customer == true %>
            <% @departments_to_show = @website.default_non_blank_item_departments %>
        <% else %>
            <% @departments_to_show = @website.default_item_departments %>
        <% end %>



        <div class="ui-corner-all custom-corners scroll_options">
          <div class="ui-bar ui-bar-a">
            <h3 id="design_choices_title">Before scrolling  for a item, please finish your current item. Here are your options</h3>


          </div>
          <ul data-role="listview" class="scroll_options item_departments">
            <li data-icon="search"><a href="/search/scroll/all_items"  class=" ui-btn ui-btn-b">Scroll All Items</a></li>
            <% @departments_to_show.each do |department| %>
                <li data-icon="search"><a href="/search/scroll/<%= department.id %>" data-department_id="<%= department.id %>" class="items_scroll_button ui-btn ui-btn-b">Scroll <%= department.Name %></a></li>
            <% end %>
            <li data-icon="search"><a href="/search" class="items_scroll_button ui-btn">Go to search</a></li>
          </ul>

          <div class="ui-body ui-body-a design_choices">
            <ul data-role="listview">
              <li><a href="/cart/place_incomplete_symbiont_on_hold">Place item on hold</a></li>
              <li><a href="/cart/delete_incomplete_symbiote">Delete item  from cart</a></li>
              <li><a href='#designs_panel'>Complete item by opening designs</a></li>
            </ul>
          </div>
        </div>









