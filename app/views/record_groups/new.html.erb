<h1>New record_group</h1>

<%= form_for(@record_group) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br /> Example: <%= RecordGroup.first.name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :ids %><br /> Example: <%= RecordGroup.first.ids %><br />
    <%= f.text_field :ids %>
  </p>
  <p>
    <%= f.label :description %> <br />Example: <%= RecordGroup.first.description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', record_groups_path %>