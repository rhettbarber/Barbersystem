
<div id="specsheet_table"  data-main_design_breast_print_categories="<%= @back_design.applicable_crest_print_ids  %>" data-main_design_id="<%= @back_design.id %>" data-item_id="<%= @item.id %>" data-last_updated_for_department="0" data-item_potential_opposite_department_ids="<%= @item.category.potential_opposite_department_ids.to_a.join(',') %>"  data-item_opposite_category_ids="<%= @item.category.category_class.opposite_category_ids %>" data-design_potential_opposite_department_ids="<%= @back_design.category.potential_opposite_department_ids.to_a.join(',') %>"  data-design_opposite_category_ids="<%= @back_design.category.category_class.opposite_category_ids %>">
    <% if  @back_design %>
                    <% if @front_design and @back_advanced_combination.number_of_sides == '2' %>
                                 <% @min_width = '425px'  %>
                    <% else %>
                                <% @min_width = '850px'  %>
                    <%  end  %>
                    <div style="margin:0px; padding: 0px;min-width:<%= @min_width   %>;text-align:center;"  id="back_design_td"  class="design_span">
                      <span>  </span>

                                                  <img src="<%= @back_design_image_name  %>"
                                                       data-back_advanced_combination_id="<%= @back_advanced_combination.id   if @back_advanced_combination %>"
                                                       id="back_design_image"
                                                       class="back_design_image"
                                                       alt=""
                                                       style=" position: relative;
                                                               margin:0px;
                                                               padding:0px;
                                                               left:<%=  @back_advanced_combination ? @back_advanced_combination.back_left  : "0" %>;
                                                               top:<%=  @back_advanced_combination ?  @back_advanced_combination.back_top  : "0" %>;
                                                               width:<%= @back_advanced_combination ? @back_advanced_combination.back_width : "100" %>;
                                                               display:inline-block;
                                                       " />
                    </div>
    <% end  %>

 </div>


<div id="specsheet_table_front">
        <div style="margin:0px; padding: 0px;min-width:425px;text-align:center;"   id="front_design_td">
          <span>  </span>
          <img src="<%= @front_design_image_name   %>"
               data-front_advanced_combination_id="<%= @front_advanced_combination.id  if @front_advanced_combination  %>"
               id="front_design_image"
               class="front_design_image"
               alt="<%= @front_design_image_name %>"
               style=" position: relative;
                       margin:0px;
                       padding:0px;
                       left:<%=   @front_advanced_combination ? @front_advanced_combination.front_left : "0"   %>;
                       top:<%=   @front_advanced_combination ? @front_advanced_combination.front_top  : "0" %>;
                       width:<%= @front_advanced_combination ? @front_advanced_combination.front_width : "100"  %>;
                       display:inline-block;
               " />
        </div>
</div>








