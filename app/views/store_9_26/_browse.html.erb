        <% else %>
     <% cc %>
                        <%= render :partial => 'breadcrumb', :locals => {:crumb => 'department'}  %>
                        <%=  render(:partial => "store/departments",:locals => {:department_type => department_type } )  %>
        <% end %>
            <% logger.debug "-------------------------------------end store/browse " %>
 <%# end  %>