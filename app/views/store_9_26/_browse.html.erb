 <%# cache (@browse_fragment_name  ) do %>


        <% logger.debug "-------------------------------------begin store/browse " %>
        <% if @department and @category %>
                        <%= render :partial => 'breadcrumb', :locals => {:crumb => 'item'} %>
                        <%=   render :partial => "store/items" %>
        <% elsif @department and !@category %>
                        <%= render :partial => 'breadcrumb', :locals => {:crumb => 'category'}  %>
