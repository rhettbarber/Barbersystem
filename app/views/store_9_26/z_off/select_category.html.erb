<%= render :partial => 'breadcrumb', :locals => {:crumb => 'category'} %>

<div class="bs-docs-grid">
  <div class="row show-grid">

          <% @department.categories.sort_by{|a| a.Name}.each do |category| %>
              <div class="col-lg-12 department_<%= @department.id %>_category"><a class="grid_category" href="#"  data-department_id="<%= @department.id %>" data-category_id="<%= category.id %>"><%= category.Name %></a></div>
          <% end %>
  </div>
</div>


<script type="text/javascript">
    $('#category_crumb').addClass('disabled');
    $('#category_crumb').addClass('current');
    $('#item_crumb').addClass('disabled');
</script>