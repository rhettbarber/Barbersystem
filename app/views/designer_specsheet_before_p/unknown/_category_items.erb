<% @items_to_get = '@items_' + choice_type -%>
<div  class="category_items">
              <%= render :partial => "designer_specsheet/category_items_pagination" ,:locals => {:choice_type => choice_type } %>
                <table id="<%= choice_type %>_designs_table" class="designs_table" >
                  <tr>
                           <td> <%= image_tag(  '/images/buttons/no-' + choice_type +  '.png'  , :width => '280' ,:alt =>  'no-' + choice_type  , :class => choice_type + '_design' ) %></td>
                            <% unless ["background", "shirt_style"].include?(choice_type) %>
                                             <% if choice_type == 'front' %>
                                                              <% if @designer_series == true %>
                                                                              <td><%=   image_tag(  '/images/buttons/breast-print.jpg'  , :height => '120' ,:alt =>  "Breast Print"  , :class =>  'on_click_convert_full_front_to_breast_print' , :border => 0  )     %> </td>
                                                                               <td><%=   image_tag(  '/images/buttons/list-breast-prints.jpg'  , :height => '120' ,:alt =>  "Breast Print"  , :class =>  'designs_list' , :border => 0  )     %> </td>
                                                               <% end %>
                                             <% elsif choice_type == 'back'  %>
                                                              <% if @designer_series == true %>
                                                                                <td><%=   image_tag(  '/images/buttons/crest-print.jpg'  , :height => '120' ,:alt =>  "Breast Print"  , :class =>  'on_click_convert_full_back_to_crest_print' , :border => 0  )     %> </td>
                                                                                <td><%=   image_tag(  '/images/buttons/list-crest-prints.jpg'  , :height => '120' ,:alt =>  "Breast Print"  , :class =>  'designs_list' , :border => 0  )     %> </td>
                                                                <% end %>
                                              <% end  %>
                                            <% if @custom_items and @custom_system %>
                                                               <td><%=   image_tag(  '/images/icons/my-custom-designs.png'  , :height => '120' ,:alt =>  "My Customs"  , :class =>  'my_custom_designs' , :border => 0  )     %> </td>
                                            <% end  %>
                            <% end  %>
                           <% if choice_type == 'background' %>
                                         <td>
                                                <%= link_to_function( image_tag('/images/icons/solid-colors.png',:border => 0 ), "Element.toggle('background_color_choices'),  update_current_design_target('background_color')    ") %>
                                         </td>
                           <% end  %>
                          <%  instance_variable_get( @items_to_get ).each do |item| %>
                                             <%  if item  %>
                                                                    <% if choice_type == 'shirt_style' %>
                                                                                       <td>  <a href="/designer_specsheet/ajax_item_details"  title="Please choose product details." onclick="Modalbox.show(this.href, {title: this.title, evalScripts:true ,  params: {  item_id: <%= item.id %>  }  }); return false;">
                                                                                                  <%= image_tag(  '/images/item_thumbnails/' + item.PictureName + '.png' , :border => 0  , :width => '280' ,:alt =>  item.PictureName   , :class => choice_type + '_design anatips', :title => item.Description ,   :data_shirt_style_category_id => item.category_id ) %>
                                                                                                 </a>
                                                                                       </td>
                                                                   <%  elsif choice_type == 'back' %>
                                                                                       <td>  
                                                                                                  <%= image_tag(  '/images/item_thumbnails/' + item.ItemLookupCode + '.png' , :border => 0  , :width => '280' ,:alt =>  item.PictureName   , :class => choice_type + '_design anatips', :title => item.Description,  :data_item_id => item.id,   :data_category_id => item.category_id ,  :data_department_id => item.department_id  ) %>
                                                                                       </td>
                                                                    <% else  %>
                                                                                       <td>
                                                                                                  <%= image_tag(  '/images/item_thumbnails/' + item.ItemLookupCode + '.png'   , :width => '280' ,:alt =>  item.ItemLookupCode , :border => '0'  , :class => choice_type + '_design',  :data_item_id => item.id ,   :data_category_id => item.category_id ,  :data_department_id => item.department_id ) %>
                                                                                                  <%=   item.ytdn  %>
                                                                                       </td>
                                                                    <% end  %>
                                              <% end  %>
                           <% end %>
                  </tr>
                </table>
                <%= render :partial => "designer_specsheet/category_items_pagination" ,:locals => {:choice_type => choice_type } %>
      </div>



