<div class="customers">

<h3>Editing customer/user Info</h3>

<%= error_messages_for :customer %>
<%= error_messages_for :user %>

<%= form_tag '/users/update/' + params[:id]  do  %>

<div style="border:solid black 1px;width:220px;height:320px;float:left;padding:5px;margin:5px;">
	
	<p>
	  <b>Email(Not Editable) see rms tip #1 about changing a customer's email address: </b>
	  <%=h @selected_customer.EmailAddress %>
	</p>
	
	  <p>
	    <b>Accountnumber</b><br />
	    <%= text_field  :customer, :AccountNumber %>
	  </p>

	  <p>
	    <b>Firstname</b><br />
	    <%= text_field  :customer,  :FirstName %>
	  </p>
	
	  <p>
	    <b>Lastname</b><br />
	    <%= text_field  :customer,  :LastName %>
	  </p>
	
</div>
<div style="border:solid black 1px;width:220px;height:320px;float:left;padding:5px;margin:5px;">

	  <p>
	    <b>Address</b><br />
	    <%= text_field  :customer,  :Address %>
	  </p>
	
	  <p>
	    <b>Address2</b><br />
	    <%= text_field  :customer,  :Address2 %>
	  </p>
	
	  <p>
	    <b>City</b><br />
	    <%= text_field  :customer,  :City %>
	  </p>
	
	  <p>
	    <b>Company</b><br />
	    <%= text_field  :customer,  :Company %>
	  </p>
	
	  <p>
	    <b>Country</b><br />
	    <%= text_field  :customer,  :Country %>
	  </p>
	
	
</div>
<div style="border:solid black 1px;width:220px;height:320px;float:left;padding:5px;margin:5px;">
	
	  <p>
	    <b>Phonenumber</b><br />
	    <%= text_field  :customer,  :PhoneNumber %>
	  </p>
	
	<p>
	    <b>Faxnumber</b><br />
	    <%= text_field  :customer,  :FaxNumber %>
	  </p>
	
	  <p>
	    <b>State</b><br />
	    <%= text_field  :customer,  :State %>
	  </p>
	
	  <p>
	    <b>Taxnumber</b><br />
	    <%= text_field  :customer,  :TaxNumber %>
	  </p>
	
	  <p>
	    <b>Zip</b><br />
	    <%= text_field  :customer,  :Zip %>
	  </p>

	  
</div>	  
<div style="border:solid black 1px;width:220px;height:320px;float:left;padding:5px;margin:5px;">


	 <p>
	 	<b>PriceLevel</b><br />
	    <select name="customer[PriceLevel]">
	    
	 		<%=  options_for_select([ ["Retail", "0"], ["Preprint", "1"], ["Blank/Transfer", "2"], ["Franchise", "3"] ], @selected_customer.PriceLevel.to_s   )  %>
	 		
	   </select>
	 </p>  
	   
	   
	  <p>
	    <b>Current Discount Percentage</b><br />
	    <%= text_field  :customer,  :CurrentDiscount %>
	  </p>


	  <p>
	    <b>Membership</b><br />
	    <%= text_field  :customer,  :CustomText4 %>
	  </p>


  <p>
    <%= submit_tag "Update" %>
  </p>

<%= link_to 'Show', user_path(@selected_user) %> |
<%= link_to 'Back', users_path %>

</div>

<% end %>



</div>