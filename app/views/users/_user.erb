    <td><%=h user.email %></td>

    <td> 
    	<%= user.AccountNumber %>
	 </td>

    <td> 
    	<%= user.Company %>
	 </td>

	 
    <td> 
    	<%= user.FirstName %>
	 </td>

    <td> 
    	<%= user.LastName %>
	 </td>
	 
    <td> 
    	<%= user.PriceLevel %>
	 </td>
 
    <td> 
    	<%  if user.customer  %>
    			<%= link_to_function "Load Customer", "SetSpecificCustomer('#{user.customer_id}')" %>
