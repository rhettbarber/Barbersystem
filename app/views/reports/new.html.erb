<h1>New report</h1>


<%= errors_for(@report, "Opps, unable to edit report").html_safe if @report %>

<%= form_for(@report) do |f| %>


  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
    <p>
    <%= f.label :link %><br />
    <%= f.text_field :link %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', reports_path %>
