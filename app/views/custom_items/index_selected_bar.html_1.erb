



<%= error_messages_for :custom_item %>

<%= form_for(:custom_item, :url => custom_items_path,
                      :html => { :multipart => true }) do |f| -%>
  <p>
    <label for="custom_item" style="font-size:27px;color:red;">Upload A Custom Design</label>
    <%= f.file_field :uploaded_data %>
    <%= hidden_field_tag 'current_design_selector', params[:current_design_selector] %>
  </p>
  <p>
    <%= submit_tag 'Create' %>
  </p>
<% end -%>



 <h1>Listing Your Custom Items</h1>


 <%= render :partial => "custom_items/size_controls" if @size_controls %>

   <div class='custom_item_preview_container'>
          <div class='custom_item_preview_container_image'>
                  <%= image_tag( @custom_items.first.public_filename, :id =>'custom_item_preview' ) %>
      </div>
              

     <div class='custom_item_preview_container_options'>

                  <%= image_tag('images/icons/add-to-front.jpg') %>

                  <%= text_field_tag "current_custom_item", @custom_items.first ,:size => 100 %>



      </div>

 </div>



  <div class='custom_items_container'>
              <% for custom_item in @custom_items %>

                <div class='custom_item_container'>


                      <% if @show_admin %>
                             width: <%= custom_item.width %><br />
                             height <%= custom_item.height %><br />
                            custom_item.methods.inspect <% custom_item.methods.inspect %><br />
                            custom_item.filename: <%=custom_item.filename %><br />
                            custom_item.public_filename:  <%=custom_item.public_filename %><br />
                            custom_item.full_filename:  <%=custom_item.full_filename %><br />
                            custom_item.full_filename('thumbnail'):  <%=custom_item.full_filename('thumbnail') %><br />
                      <% end  %>

                      <div class='custom_item_image_container'>

                                   <%=    image_tag(custom_item.public_filename, :class => 'custom_item_image' , :id => custom_item.id  )     %>

                        <% if @old_school_links %>
                                    <div class='custom_item_links_container' id="custom_item_links_container_<%= custom_item.id %>">
                                            <%= link_to 'Show', custom_item %><br/>
                                            <%= link_to 'Edit', edit_custom_item_path(custom_item) %><br/>
                                            <%= link_to 'Destroy', custom_item, :confirm => 'Are you sure?', :method => :delete %><br/>
                                            <%= link_to 'View on Designer Specsheet', :controller => 'designer_specsheet', :custom_item_id => custom_item.id, :current_design_selector => params[:current_design_selector] %>
                                 </div>
                        <% end  %>

                     </div>





                </div>
              <% end %>
</div>

 
<br />





