


<p><%= link_to "Back to all Orders", :controller => 'order_tracking'   %> </p>

<% if @viewable_purchase %>

		<form>
		              <input type="button" onclick="window.print();return false;" value=" Print this page"/>
		</form>


<div class="checkout_page">
	<div class="checkout_website_name">
		<%=  @website.title  + ' ' + controller.action_name.humanize + ' # ' +  @viewable_purchase.id.to_s    %> <br />
        </div>

	<table class="checkout_printable_header"  border="0" cellspacing="0" cellpadding="0" >
		<tr height="20">
					<th width="283"><%=    render(:partial => "order_tracking/purchases_show" )  -%></th>
		</tr>
	</table>



	<table class="checkout_printable_header"  border="0" cellspacing="0" cellpadding="0" >
		<tr height="20">

					<th width="283">BILL TO:</th>
					<th width="283">SHIP TO:</th>
					<th   width="283">PAYMENT/SHIPPING_SERVICE:</th>
		</tr>
	</table>



	<table class="checkout_printable"  border="0" cellspacing="0" cellpadding="0" >
	<table width="850" cellspacing="1" cellpadding="1" border="1" align="" summary="">
	    <tbody>
	        <tr>
	            <td width="283"><%=    render(:partial => "order_tracking/customers_show" )  -%></td>
	            <td width="283">

                                    <%=    render(:partial => "order_tracking/ship_tos_show"  ) if @viewable_purchase.ship_to -%>
                    </td>
	            <td>
	            <table width="283" cellspacing="1" cellpadding="1" border="1" align="" summary="">
	                <tbody>
	                    <tr>
	                        <td width="283">order_tracking/quote_tender_entries_show</td>
	                    </tr>
	                    <tr>
	                        <td width="283"><%=    render(:partial => "order_tracking/ship_tos_show_shipping_service"  ) -%></td>
	                    </tr>
	                </tbody>
	            </table>
	            </td>
	        </tr>
	    </tbody>
	</table>
</table>
                
	<table class="checkout_printable"  border="0" cellspacing="0" cellpadding="0" >
	    <tbody>

                                        <%= render(:partial => "order_tracking/shared_display_cart_display_cart_contents")%>

					<%= render(:partial => "order_tracking/shared_display_cart_cart_bottom_totals")  %>
		 
	    </tbody>
	</table>


</div>




<% else %>
