                                                                         <%= link_to 'Load More', sale_designs_path( :page => @paginated_results.next_page), :id => "page-link", :class => 'ui-btn load-more-revisions', :remote => true   -%>
                                                      <% else %>
                                                                                   <!--not @paginated_results.next_page-->
                                                      <% end %>
                 <% else %>

                 <% end %>
</div>





