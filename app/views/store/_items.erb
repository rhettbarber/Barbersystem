<% @paginated_results.each do |item| %>
    <li>
                  <a href="/specsheet/<%= item.id %>">
                            <div>

                                                            <img src="/images/item_thumbnails/<%=   item.PictureName  %>" class="ui-li-thumb" style="display:inline;max-height:200px;"> <br>
