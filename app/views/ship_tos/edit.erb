
  <p style="text-align: center;">Editing Customer Shipping Address </p>

        <%= errors_for(@ship_to, "Opps, unable to edit customer").html_safe if @ship_to %>

        <%= form_for(:ship_to, :url => ship_to_path(@ship_to), :html => { :method => :put }) do |f| %>



      <p>
        <label for="Company">Company (optional)</label>
        <input data-clear-btn="true" name="ship_to[Company]" id="Company" value="<%= @ship_to.Company %>">
      </p>

      <p>
        <label for="Name">Name</label>
        <input data-clear-btn="true" name="ship_to[Name]" id="Name_Req" value="<%= @ship_to.Name %>">
      </p>

      <p>
        <label for="Address">Address</label>
        <input data-clear-btn="true" name="ship_to[Address]" id="Address_Req" value="<%= @ship_to.Address %>">
      </p>

      <p>
        <label for="Address2">Address2 (optional)</label>
        <input data-clear-btn="true" name="ship_to[Address2]" id="Address2" value="<%= @ship_to.Address2 %>">
      </p>

      <p>
        <label for="City">City </label>
        <input data-clear-btn="true" name="ship_to[City]" id="City_Req" value="<%= @ship_to.City %>">
      </p>

      <p>
        <label for="State">State </label>
        <input data-clear-btn="true" name="ship_to[State]" id="State_Req" value="<%= @ship_to.State %>">
      </p>

      <p>
        <label for="Zip">Zip</label>
        <input type="number" data-clear-btn="true" name="ship_to[Zip]" id="Zip_Req" value="<%= @ship_to.Zip %>">
      </p>


      <%= hidden_field_tag("Country", "United States" )  %>

      <p>
        <label for="PhoneNumber">PhoneNumber</label>
        <input type="tel" data-clear-btn="true" name="ship_to[PhoneNumber]" id="PhoneNumber_Req" value="<%= @ship_to.PhoneNumber %>">
      </p>

      <p>
        <label for="FaxNumber">FaxNumber (optional)</label>
        <input type="tel" data-clear-btn="true" name="ship_to[FaxNumber]" id="FaxNumber_Req" value="<%= @ship_to.FaxNumber %>">
      </p>



      <p>
                <%#= submit_tag "Update" %>
                <%= button_tag(type: "submit", class: "ui-btn ui-btn-b" ) do %>
                    Update shipping address <i class="icon-repeat"></i>
                <% end %>
          </p>
        <% end %>



        <%=link_to(  "Cancel editing ship to" ,  ship_tos_path , :class => "ui-btn")    %>
