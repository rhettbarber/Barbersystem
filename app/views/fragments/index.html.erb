<h1>Listing fragments</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Url</th>
    <th>Description</th>
  </tr>

<% @fragments.each do |fragment| %>
  <tr>
    <td><%=h fragment.name %></td>
    <td><%=h fragment.url %></td>
    <td><%=h fragment.description %></td>
    <td><%= link_to 'Show', fragment %></td>
    <td><%= link_to 'Edit', edit_fragment_path(fragment) %></td>
    <td><%= link_to 'Destroy', fragment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New fragment', new_fragment_path %>