
			<% item =  Item.find(purchases_entry.item_id)  %>
			<% quantity = purchases_entry.QuantityOnOrder %>
					
					
					      <tr id="<%= 'purchases_entry_' + purchases_entry.id.to_s %>">
					                <td  class="purchases_entry_delete_printable">
					                            	
					        		</td>    		
					                <td  class="purchases_entry_master_image_printable">	
														<%=   image_tag purchases_entry.item.image_url( purchases_entry.item.department , 'item_thumbnails/','x'  ),:size => '80x80'  %>	
					        		</td>
					                <td  class="purchases_entry_slave_image_printable">	
					        		</td>		


					                <td  class="purchases_entry_quantity_printable">        
					                                    <%= form_remote_tag( :url => { :controller => "barber_store",  :action => "update_QuantityOnOrder", :id =>purchases_entry.id},  :html =>{ }) %>		                                       
					                                    <%= text_field "purchases_entries", "QuantityOnOrder", "size" => 2, :value=> 
					                                    number_with_precision(purchases_entry.QuantityOnOrder,precision=0), :class => 'input_text_short', :onblur => remote_function(:url => { :controller => "barber_store", :action => "update_QuantityOnOrder", :id => purchases_entry.id}, :with => 'Form.serialize(this.form)') %>
					                                    <%= end_form_tag %> 
					                </td>
					              
					                <td  class="purchases_entry_itemlookupcode_printable"><%= item.ItemLookupCode %>  </td>
					             
					                <td  class="purchases_entry_description_printable"><%= item.Description %>	 </td>
					           
					                 <td  class="purchases_entry_full_unit_price_printable">
					                                <div  id="full_unit_price_<%= purchases_entry.id %>"> 
					                                                <%= item.full_unit_price(@customer)  %>
					                                </div>
					                </td>
					                 <td  class="purchases_entry_full_extended_price_printable">
					                                  <div  id="full_extended_price_<%= purchases_entry.id %>">
					                                                <%=   number_with_precision(  purchases_entry.full_extended_price(@customer,item) ,2)  %> 
					                                   </div>
					                  </td>
					
					      </tr>
    



