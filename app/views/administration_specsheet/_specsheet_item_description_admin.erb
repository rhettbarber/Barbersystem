
<% item = @item %>
			<table border="1" width="280">
				<tr>
					<td><strong>ITEM TABLE</strong></td>
				</tr>	

<%=  form_for item , :url => { :controller => "items", :action => "update_and_send_back" } do |f|  %>
				<%= hidden_field_tag "id", item.id %>
				<tr>
					<td><%= f.text_field( :Description ,:size => 30 ) %>--Description</td>
				</tr>
				<tr>
					<td><%= f.text_area( :ExtendedDescription ,:rows => 10, :cols => 25 ) %>--Extended Description</td>
				</tr>
				<tr>
					<td><%= submit_tag('Update Item') %></td>
				</tr>

<%  end  %> 			
			</table>
		
			
			
	